    
    <header class="masthead text-center text-white">
      <div class="masthead-content">
        <div class="container">
          <h1 class="masthead-heading mb-0">{{user.name}}</h1>
        </div>
      </div>
    </header>

    <section class="overlap">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-6">
            {{> messages}}
            <ul class="list-group mb-3">
              <li class="list-group-item d-flex justify-content-between align-items-center">
                ID
                <span class="badge badge-info badge-pill">{{minus 1 user._id}}</span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                UUID
                <span class="badge">{{user.id}}</span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                Name
                <span class="badge">{{user.name}}</span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                Role
                <span class="badge">{{user.role}}</span>
              </li>
              {{#if usersRequireVerification}}
              <li class="list-group-item d-flex justify-content-between align-items-center">
                Verified
                <span class="badge">{{#if user.verified}}Yes{{else}}No. <a class="link" href="/user/resend-verification">Send Verification Email</a>{{/if}}</span>
              </li>{{/if}}
              <li class="list-group-item d-flex justify-content-between align-items-center">
                Joined
                <span id="joined" class="badge">{{dateformat "mmmm d, yyyy" user.joined}}</span>
              </li>
            </ul>
            <a class="btn btn-info btn-block" href="/user/edit">Edit Account</a>
            <a class="btn btn-info btn-block" href="/user/logout">Logout</a>
          </div>
        </div>
      </div>
    </section>