    
    <header class="masthead text-center text-white">
      <div class="masthead-content">
        <div class="container">
          <h1 class="masthead-heading mb-0">{{page.title}}</h1>
        </div>
      </div>
    </header>

    <section class="overlap">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-9">
            {{> messages}}
            <ul class="list-group mb-3">
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <form class="form-inline w-100">
                  <input name="name" value="{{query.name}}" type="search" class="form-control my-1 mr-sm-2" id="inlineFormCustomSelectName" placeholder="Search">
                  <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Role</label>
                  <select name="role" class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectRole">
                    <option value="" {{selectItemActive query.role ""}}>Choose...</option>
                    <option value="admin" {{selectItemActive query.role "admin"}}>Admin</option>
                    <option value="regular" {{selectItemActive query.role "regular"}}>Regular</option>
                  </select>
                  <!--label class="my-1 mr-2" for="inlineFormCustomSelectPref">Sort</label>
                  <select name="sort" class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectSort">
                    <option value="id-asc" {{selectItemActive query.sort ""}}>ID ▲</option>
                    <option value="id-desc" {{selectItemActive query.sort "id-desc"}}>ID ▼</option>
                    <option value="name-asc" {{selectItemActive query.sort "name-asc"}}>Name ▲</option>
                    <option value="name-desc" {{selectItemActive query.sort "name-desc"}}>Name ▼</option>
                    <option value="joined-asc" {{selectItemActive query.sort "joined-asc"}}>Joined ▲</option>
                    <option value="joined-desc" {{selectItemActive query.sort "joined-desc"}}>Joined ▼</option>
                  </select-->
                  <button type="submit" class="btn btn-primary my-1 ml-auto"><i class="bi bi-search"></i></button>
                </form>
                {{#unless query}}<a class="btn" href="/users"><i class="bi bi-x-circle-fill"></i></a>{{/unless}}
              </li>{{#each users}}
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <span><span class="badge badge-info badge-pill mr-3">{{minus 1 _id}}</span> <a class="link" href="/users/{{minus 1 _id}}">{{name}}</a> 
                {{#ifeq role "admin"}}<em class="badge">( Administrator )</em>{{/ifeq}}
                {{#ifnoteq role "admin"}}{{#ifnoteq role "regular"}}<em class="text-muted badge">( {{role}} )</em>{{/ifnoteq}}{{/ifnoteq}}
                </span>
                <span class="badge text-muted">Joined {{dateformat "mmmm d, yyyy" joined}}</span>
              </li>{{else}}<li class="list-group-item d-flex justify-content-between align-items-center"><em>No results</em> <a class="link" href="/users">Start over</a></li>{{/each}}
            </ul>
          </div>
        </div>
      </div>
    </section>